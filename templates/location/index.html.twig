{% extends 'base.html.twig' %}

{% block title %}Location index{% endblock %}

{% block body %}
    <h1>{{ 'site.your_locations'|trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ 'site.country'|trans }}</th>
                <th>{{ 'site.region'|trans }}</th>
                <th>{{ 'site.city'|trans }}</th>
                <th>{{ 'site.address'|trans }}</th>
                <th>{{ 'site.currency'|trans }}</th>
                <th>{{ 'site.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for location in locations %}
            <tr>
                <td>{{ location.country }}</td>
                <td>{{ location.region }}</td>
                <td>{{ location.city }}</td>
                <td>{{ location.address }}</td>
                <td>{{ location.currency }}</td>
                <td>
                    <a href="{{ path('location_show', {'id': location.id}) }}">{{ 'site.show'|trans }}</a>
                    <a href="{{ path('location_edit', {'id': location.id}) }}">{{ 'site.edit'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">{{ 'site.no_records_found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('location_new') }}">{{ 'site.create_new'|trans }}</a>
{% endblock %}
