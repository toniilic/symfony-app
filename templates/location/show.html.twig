{% extends 'base.html.twig' %}

{% block title %}Location{% endblock %}

{% block body %}
    <h1>{{ 'site.location'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'site.id'|trans }}</th>
                <td>{{ location.id }}</td>
            </tr>
            <tr>
                <th>{{ 'site.country'|trans }}</th>
                <td>{{ location.country }}</td>
            </tr>
            <tr>
                <th>{{ 'site.region'|trans }}</th>
                <td>{{ location.region }}</td>
            </tr>
            <tr>
                <th>{{ 'site.city'|trans }}</th>
                <td>{{ location.city }}</td>
            </tr>
            <tr>
                <th>{{ 'site.address'|trans }}</th>
                <td>{{ location.address }}</td>
            </tr>
            <tr>
                <th>{{ 'site.currency'|trans }}</th>
                <td>{{ location.currency }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('location_index') }}">{{ 'site.back_to_list'|trans }}</a>

    <a href="{{ path('location_edit', {'id': location.id}) }}">{{ 'site.edit'|trans }}</a>

    {{ include('location/_delete_form.html.twig') }}
{% endblock %}
