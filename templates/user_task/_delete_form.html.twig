<form method="post" action="{{ path('user_task_delete', {'id': task.id}) }}" onsubmit="return confirm("{{ 'site.delete_confirmation'|trans}}");">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
    <button class="btn">{{ 'site.delete'|trans }}</button>
</form>
