{% extends 'base.html.twig' %}

{% block body %}


<div class="my-3 p-3 bg-white rounded shadow-sm">

    {% if islocation.isHidden is defined %}
        <small class="d-block text-right mt-3">
            {{ location.country }},
            {{ location.region }},
            {{ location.city }},
            {{ location.address }},
            {{ location.postalCode }},
            {{ location.currency }}
        </small>
    {% endif %}

    {{ include('user_task/_form.html.twig', {'button_label': 'site.create'|trans}) }}
</div>



{% endblock %}


